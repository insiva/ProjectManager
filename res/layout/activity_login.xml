<com.xhj.pm.ui.view.LockableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lockLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<GridLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:rowCount="3"
    android:columnCount="2"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_id"
        android:layout_gravity="end|center"
        android:padding="5dp"/>
    <EditText android:id="@+id/etUserId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
    android:inputType="text"
        android:singleLine="true"
        android:layout_gravity="start|center"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_gravity="end|center"
        android:padding="5dp"/>
    <EditText android:id="@+id/etPassword"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:password="true"
        android:singleLine="true"
        android:padding="3dp"
        android:layout_gravity="start|center"/>
    <Button android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/login"
        android:layout_columnSpan="2"
        android:layout_gravity="center"/></GridLayout>

</RelativeLayout>
</com.xhj.pm.ui.view.LockableLayout>